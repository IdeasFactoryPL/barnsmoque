<div class="text-center">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field top30">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, size: 40 %>
    </div>

    <div class="field top15">
      <%= f.label "HasÅ‚o" %><br />
      <%= f.password_field :password, autocomplete: "off", size: 40 %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field top15">
        <%= f.check_box :remember_me %>
        <%= f.label "Pozostaw mnie zalogowanego" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-primary btn-lg top30' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>