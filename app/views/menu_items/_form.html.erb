<%= form_for @menu_item do |f| %>
  <div class="form-group">
    <%= f.label :name, "Nazwa" %>
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :english_name, "Nazwa po angielsku" %>
    <%= f.text_field :english_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :number, "Numer w kolejności (0 najwyżej 99 najniżej)" %>
    <%= f.text_field :number, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description, "Opis" %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :english_description, "Opis po angielsku" %>
    <%= f.text_area :english_description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :price, "Cena" %>
    <%= f.number_field :price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :start_date, "Data rozpoczęcia wyświetlania potrawy" %>
    <%= f.datetime_select :start_date, include_blank: true, selected: @start_date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :end_date, "Data zakończenia wyświetlania potrawy" %>
    <%= f.datetime_select :end_date, include_blank: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :menu_group, "Należy do grupy menu" %>
    <%= f.select :menu_group_id, options_for_select([[]] + MenuGroup.all.collect{|m| [m.name, m.id]}, selected: @selected_menu_group), {}, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.submit "Wyślij", class: "btn btn-primary" %>
  </div>
<% end %>
