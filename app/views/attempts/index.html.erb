<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'bootstrap.min' %>
<% end %>
<div class="container">
  <h2>Lista świniobijców</h2>  
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Zdjęcie</th>
        <th>Imię</th>
        <th>Nazwisko</th>
        <th>Czas</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @attempts.each do |attempt| %>
        <tr>
          <td>
            <%= image_tag attempt.avatar.url(:thumb) %>
          </td>
          <td>
            <%= attempt.name %>
          </td>
          <td>
            <%= attempt.surname %>
          </td>
          <td>
            <%= attempt.time %>
          </td>
          <td>
            <%= link_to "Edytuj", edit_attempt_path(attempt), class: "btn btn-warning" %>
          </td>
          <td>
            <%= link_to "Usuń", attempt_path(attempt), method: :delete, data: {confirm: "Jesteś pewien, że chcesz usunąć " + attempt.name_surname_time}, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>