<div class="title">
  <%= @news.title %>
</div>
<div class="container theme-showcase" role="main">
  <div class="container">
    <table class="table table-hover">
        <tbody>
          <tr>
            <td>Data</td>
            <td><%= @news.date %></td>
          </tr>
          <tr>
            <td>Data ukazania na stronie</td>
            <td><%= @news.release_date %></td>
          </tr>
          <tr>
            <td>Opis</td>
            <td><%= @news.description_with_link.html_safe %></td>
          </tr>
          <tr>
            <td><%= link_to "Edytuj", edit_news_path(@news), class: 'btn btn-warning btn-m' %></td>
          <td><%= link_to "Usuń", news_path(@news), method: :delete, data: {confirm: "Czy na pewno chcesz usunąć #{@news.title}?"}, class: 'btn btn-danger btn-m' %></td>
          </tr>
          <tr>
            <td>
              <%= link_to "Wróć do aktualności", news_index_path, class: 'btn btn-info btn-m' %>
            </td>
            <td></td>
          </tr>
        </tbody>
    </table>
  </div>
</div>