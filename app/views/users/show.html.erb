<div class="title">
  <%= @user.email %>
</div>
<div class="container theme-showcase" role="main">
  <div class="container">
    <table class="table table-hover">
        <tbody>
          <tr>
            <td>Uprawnienia</td>
            <td><%= @user.role.name %></td>
          </tr>
          <tr>
            <td><%= link_to "Edytuj", edit_user_path(@user), class: 'btn btn-warning btn-m' %></td>
          <td><%= link_to "Usuń", user_path(@user), method: :delete, data: {confirm: "Czy na pewno chcesz usunąć użytkownika #{@user.email}?"}, class: 'btn btn-danger btn-m' %></td>
          </tr>
          <tr>
            <td>
              <%= link_to "Wróć do użytkowników", users_path, class: 'btn btn-info btn-m' %>
            </td>
            <td></td>
          </tr>
        </tbody>
    </table>
  </div>
</div>