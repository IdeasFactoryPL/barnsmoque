<%= form_for @user do |f| %>
  <%= render 'layouts/error_messages', :object => @user %>
  <div class="form-group">
    <%= f.label :email, "Email" %>
    <% if can? :edit, User %>
      <%= f.email_field :email, class: 'form-control', required: true, oninvalid: "alert('Email jest wymagany');" %>
    <% else %>
      <%= f.email_field :email, class: 'form-control', required: true, readonly: true, oninvalid: "alert('Email jest wymagany');" %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :password, "Hasło (minimum 8 znaków)" %>
    <%= f.password_field :password, class: 'form-control', oninvalid: "alert('Hasło jest wymagane');", minlength: 8 %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Potwierdź hasło" %>
    <%= f.password_field :password_confirmation, class: 'form-control', oninvalid: "alert('Potwierdzenie hasła jest wymagane');" %>
  </div>
  <% if can? :edit, User %>
    <div class="form-group">
      <%= f.label :role_id, "Uprawniena" %>
      <%= f.select :role_id, options_for_select(@roles.collect{|r| [r.name, r.id]}, @users.last.role.name), {}, class: 'form-control' %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.submit "Wyślij", class: "btn btn-primary" %>
  </div>
<% end %>