<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, class: 'form-control', required: true, oninvalid: "alert('Email jest wymagany');" %>
  </div>
  <div class="form-group">
    <%= f.label :password, "Hasło" %>
    <%= f.password_field :password, class: 'form-control', oninvalid: "alert('Hasło jest wymagane');" %>
  </div>
  <div class="form-group">
    <%= f.label :role_id, "Uprawniena" %>
    <%= f.select :role_id, options_for_select(@roles.collect{|r| [r.name, r.id]}, @users.last.role.name), {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit "Wyślij", class: "btn btn-primary" %>
  </div>
<% end %>